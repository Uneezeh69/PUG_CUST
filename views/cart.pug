extends layout

block content
  h2 View the items in cart.
  - var total=0;
  - var totalQ=0;
    table.table
      thead
        th Name
        th Price
        th Quantity
        th Select
      tbody
        each item in cart
          - total += Number(item.price)
          - totalQ += Number(item.quantity)
          tr
            td= item.name
            td= item.price
            td= item.quantity
            td
             a(href="/products/cart/remove/" +item._id, class="btn btn-warning") Remove
      tfoot
        tr
          td Total Amount
          td=total
          td=totalQ
    a(href="/logout" class="btn btn-success", data-toggle="tooltip" data-placement="right" title="You will be logged out and order shall be placed!") CheckOut